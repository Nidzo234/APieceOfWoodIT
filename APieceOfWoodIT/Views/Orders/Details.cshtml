@model IEnumerable<APieceOfWoodIT.Models.Product>
@{
    ViewBag.Title = "Details";
}

<h2>Детали за нарачката</h2>

@foreach (var item in Model)
{
    <div class="card" style="flex-direction:row; height:150px; margin-top:20px">
        <div style="width:24%; display:inline-block">
            <img class="card-img-left" src=@item.ImageUrl style="max-height:150px" alt="Card image cap">
        </div>
        <div style="width: 24%; display:inline-block">
            <h5 class="card-title">@item.Name</h5>
        </div>
        <div style="width: 24%; display:inline-block">
            <p class="card-text">@item.Description</p>
        </div>
        <div style="width: 24%; display:inline-block">
            <p class="card-text">Цена: @item.Price</p>
        </div>
    </div>
}
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light pl-5 pr-5">
        <a class="navbar-brand" href="/home/index">A PIECE OF WOOD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/home/index">ПОЧЕТНА <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">ПРОИЗВОДИ</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Повеќе
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @if (!User.IsInRole("Administrator"))
                        {
                            <a class="dropdown-item" href="/orders">Мои нарачки</a>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <a class="dropdown-item" href="/admin">Админ панел</a>
                        }
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/home/about">Контакт</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/about">ЗА НАС</a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0" ">
                @if (Request.IsAuthenticated)
                {
                    <a class="btn btn-outline-success my-2 my-sm-0 mr-2" href="/card">Кошничка</a>
                }
                @*<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0 mr-3" type="submit">Search</button>*@
            </form>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

